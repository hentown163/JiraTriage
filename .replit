modules = ["python-3.11", "nodejs-20", "dotnet-8.0"]
[agent]
expertMode = true

[nix]
channel = "stable-25_05"
packages = ["bash", "libxcrypt"]

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "UI"

[[workflows.workflow]]
name = "UI"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd src/ControlPlane/JiraTriage.UI && dotnet run --urls http://0.0.0.0:5000"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 5000
externalPort = 80

[deployment]
deploymentTarget = "autoscale"
run = ["dotnet", "run", "--project", "src/ControlPlane/JiraTriage.UI/JiraTriage.UI.csproj", "--urls", "http://0.0.0.0:5000"]
